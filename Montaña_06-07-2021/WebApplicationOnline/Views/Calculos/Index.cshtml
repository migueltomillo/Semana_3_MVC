
@{
    ViewData["Title"] = "Calculos";
}

<div class="text-center">
    <h1>Calculos</h1>
    <form action="/calculos/sumar" method="post">
        <div class="form-group">
            <input type="number" name="primerNumero" class="form-control" placeholder="Ingrese el primer numero" />
        </div>
        <div class="form-group">
            <input type="number" name="segundoNumero" class="form-control" placeholder="Ingrese el segundo numero" />
        </div>
            <input type="submit" class="btn btn-primary" value="Sumar" />
        
    </form>
</div>
